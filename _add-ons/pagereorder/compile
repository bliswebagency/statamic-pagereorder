# Compile CoffeeScript.
coffee -cl js/src/*.coffee;

# Concatenate JS.
cat js/src/jquery.sortable.js js/src/jquery.page-reorder.init.js | uglifyjs -o js/jquery.page-reorder.min.js -mclv;

# Minify JS
# uglifyjs -o js/jquery.page-reorder.min.js -mclv js/jquery.page-reorder.js;

# Minify CSS
cleancss -o css/page-reorder.min.css css/page-reorder.css;

# Done
echo "All done sir!";